
@{
    ViewBag.Title = "SocialAccount";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<div class="main-content bg-lightblue theme-dark-bg right-chat-active">

    <div class="middle-sidebar-bottom">
        <div class="middle-sidebar-left">
            <div class="middle-wrap">
                <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                    <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                        <a href="default-settings.html" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                        <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Social Network</h4>
                    </div>
                    <div class="card-body p-lg-5 p-4 w-100 border-0">
                        <form id="socialForm">
                            <div class="row">

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Facebook</label>
                                        <input type="text" id="FacebookProfile" name="FacebookProfile" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Twitter</label>
                                        <input type="text" id="Twitter" name="Twitter" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">LinkedIn</label>
                                        <input type="text" id="LinkedIn" name="LinkedIn" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Instagram</label>
                                        <input type="text" id="Instagram" name="Instagram" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Flickr</label>
                                        <input type="text" id="Flickr" name="Flickr" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Github</label>
                                        <input type="text" id="Github" name="Github" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Skype</label>
                                        <input type="text" id="Skype" name="Skype" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-6 mb-3">
                                    <div class="form-group">
                                        <label class="mont-font fw-600 font-xsss">Google</label>
                                        <input type="text" id="Google" name="Google" class="form-control">
                                    </div>
                                </div>

                                <div class="col-lg-12 mb-0 mt-2">
                                    <button type="button" id="btnSave" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 border-0">Save</button>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#btnSave").click(function (e) {
        e.preventDefault();

        let model = {
            FacebookProfile: $("#FacebookProfile").val(),
            Twitter: $("#Twitter").val(),
            LinkedIn: $("#LinkedIn").val(),
            Instagram: $("#Instagram").val(),
            Flickr: $("#Flickr").val(),
            Github: $("#Github").val(),
            Skype: $("#Skype").val(),
            Google: $("#Google").val(),
        };

        $.ajax({
            url: '@Url.Action("SocialAccount", "User")', 
            type: 'POST',
            data: model,
            success: function (res) {
                if (res.IsSuccess) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Saved!',
                        text: res.Message,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        toast: true
                    });
                    // ✅ Clear all inputs after success
                    $("#socialForm")[0].reset();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: res.Message,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        toast: true
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong while saving!',
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 2000,
                    toast: true
                });
            }
        });
    });
</script>
