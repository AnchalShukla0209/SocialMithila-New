<script type="text/javascript">

 
    $(document).ready(function () {
        var userId = $("#UserId").val();

        $.ajax({
            url: '/User/UserProfilePartial',
            type: 'GET',
            data: { userId: userId },
            success: function (data) {
                $('#userProfileContainer').html(data);
                initializeFriendButton();
            },
            error: function () {
                alert('Error loading user profile.');
            }
        });

        // -------------------------------
        // Friend Button Logic (Reusable)
        // -------------------------------
        function initializeFriendButton() {
            var $btn = $('#friend-action-btn');
            if ($btn.length === 0) return; // skip if not present

            var status = $btn.data('status') || "";
            var friendshipId = $btn.data('friendshipid') || "";
            var isRequester = $btn.data('isrequester') === true || $btn.data('isrequester') === 'True';

            // Initial state
            showButtonState($btn, { status, friendshipId, isRequester });

            // Click handler
            $btn.off('click').on('click', function (e) {
                e.preventDefault();
                var action = $(this).data('action');
                var profileUserId = $(this).data('userid');
                var friendshipId = $(this).data('friendshipid');

                if (action === 'send') sendFriendRequest(profileUserId);
                else if (action === 'cancel') cancelFriendRequest(friendshipId, profileUserId);
                else if (action === 'accept') acceptFriendRequest(friendshipId, profileUserId);
            });
        }

        // -------------------------------
        // Helper: Button Render Function
        // -------------------------------
        function showButtonState($btn, opts) {
            var status = opts.status;
            var fid = opts.friendshipId || '';
            var isRequester = !!opts.isRequester;

            $btn.removeClass('bg-success bg-warning bg-primary bg-dark text-white text-grey-700');

            if (!status) {
                $btn.addClass('bg-success text-white')
                    .html('<i class="fa fa-user-plus me-1"></i> Send Friend Request')
                    .data('action', 'send').data('friendshipid', '');
            } else if (status === 'P') {
                if (isRequester) {
                    $btn.addClass('bg-warning text-white')
                        .html('<i class="fa fa-times me-1"></i> Cancel Friend Request')
                        .data('action', 'cancel').data('friendshipid', fid);
                } else {
                    $btn.addClass('bg-primary text-white')
                        .html('<i class="fa fa-handshake me-1"></i> Accept Friend Request')
                        .data('action', 'accept').data('friendshipid', fid);
                }
            } else if (status === 'A') {
                $btn.addClass('bg-dark text-white')
                    .html('<i class="fa fa-handshake-o me-1"></i> Already Friends')
                    .data('action', 'friends').data('friendshipid', fid);
            }
        }



        function sendFriendRequest(addresseeId) {
            var $btn = $('#friend-action-btn');
            $.ajax({
                url: '/User/SendFriendRequest',
                type: 'POST',
                data: { addresseeId: addresseeId },
                success: function (res) {
                    if (res.success) {
                        showButtonState($btn, { status: res.status, friendshipId: res.friendshipId, isRequester: true });
                    } else {
                        alert(res.message || 'Unable to send request.');
                    }
                },
                error: function () { alert('Error sending friend request.'); }
            });
        }

        function cancelFriendRequest(friendshipId, addresseeId) {
            var $btn = $('#friend-action-btn');
            $.ajax({
                url: '/User/CancelFriendRequest',
                type: 'POST',
                data: { friendshipId: friendshipId, addresseeId: addresseeId },
                success: function (res) {
                    if (res.success) {
                        showButtonState($btn, { status: null, friendshipId: null, isRequester: false });
                    } else {
                        alert(res.message || 'Unable to cancel request.');
                    }
                },
                error: function () { alert('Error cancelling friend request.'); }
            });
        }

        function acceptFriendRequest(friendshipId, addresseeId) {
            var $btn = $('#friend-action-btn');
            $.ajax({
                url: '/User/AcceptFriendRequest',
                type: 'POST',
                data: { friendshipId: friendshipId, addresseeId: addresseeId },
                success: function (res) {
                    if (res.success) {
                        showButtonState($btn, { status: res.status, friendshipId: friendshipId, isRequester: false });
                    } else {
                        alert(res.message || 'Unable to accept request.');
                    }
                },
                error: function () { alert('Error accepting friend request.'); }
            });
        }
    });


</script>


